generator client {
    provider     = "prisma-client"
    output       = "../src/generated/prisma"
    moduleFormat = "cjs"
}

datasource db {
    provider = "postgresql"
}

enum ActionScope {
    OWN
    ANY
}

enum OtpType {
    PASSWORD_RESET
    PASSWORD_DISABLE
    EMAIL_CHANGE
    EMAIL_VERIFICATION
}

enum TokenType {
    PASSWORD_RESET
    EMAIL_CHANGE
}

model User {
    id                String    @id @default(cuid())
    publicId          String    @unique @default(nanoid(6))
    email             String?   @unique
    emailVerifiedAt   DateTime?
    emailUpdatedAt    DateTime?
    password          String?
    passwordUpdatedAt DateTime?
    googleSub         String?   @unique
    githubId          String?   @unique
    isActive          Boolean   @default(true)

    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    userProfile    UserProfile?
    userAuthStates UserAuthState?
    sessions       Session[]
    otps           Otp[]
    otpAttempts    OtpAttempt[]
    tokens         Token[]

    @@map("users")
}

model UserProfile {
    userId    String    @id
    firstName String
    lastName  String
    photoUrl  String?
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    user User @relation(fields: [userId], references: [id])

    @@map("user_profiles")
}

model Role {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime

    roleActions RoleAction[]
    userRoles   UserRole[]

    @@map("roles")
}

model Action {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime

    roleActions RoleAction[]
    userActions UserAction[]

    @@map("actions")
}

model RoleAction {
    roleId       Int
    actionId     Int
    defaultScope ActionScope @default(OWN)

    role   Role   @relation(fields: [roleId], references: [id])
    action Action @relation(fields: [actionId], references: [id])

    @@id([roleId, actionId])
    @@map("role_actions")
}

model UserRole {
    userId String
    roleId Int

    role Role @relation(fields: [roleId], references: [id])

    @@id([userId, roleId])
    @@map("user_roles")
}

model UserAction {
    userId   String
    actionId Int
    scope    ActionScope

    action Action @relation(fields: [actionId], references: [id])

    @@id([userId, actionId])
    @@map("user_actions")
}

model Session {
    id        String   @id @default(cuid())
    userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user         User          @relation(fields: [userId], references: [id])
    refreshToken RefreshToken?

    @@map("sessions")
}

model RefreshToken {
    id        Int      @id @default(autoincrement())
    sessionId String   @unique
    value     String   @unique
    expiresAt DateTime
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    session Session @relation(fields: [sessionId], references: [id])

    @@map("refresh_tokens")
}

model UserAuthState {
    userId              String    @id
    failedLoginAttempts Int       @default(0)
    lastAttemptAt       DateTime?
    lockedUntil         DateTime?
    createdAt           DateTime  @default(now())
    updatedAt           DateTime  @updatedAt

    user User @relation(fields: [userId], references: [id])

    @@map("user_auth_states")
}

model Otp {
    id        String   @id @default(cuid())
    userId    String
    type      OtpType
    code      String
    expiresAt DateTime
    createdAt DateTime @default(now())

    user User @relation(fields: [userId], references: [id])

    @@unique([userId, type])
    @@map("otps")
}

model OtpAttempt {
    userId         String
    type           OtpType
    failedAttempts Int       @default(0)
    lastAttemptAt  DateTime?
    lockedUntil    DateTime?
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt

    user User @relation(fields: [userId], references: [id])

    @@id([userId, type])
    @@map("otp_attempts")
}

model Token {
    id        String    @id @default(cuid())
    userId    String
    type      TokenType
    value     String    @unique
    expiresAt DateTime
    createdAt DateTime  @default(now())

    user User @relation(fields: [userId], references: [id])

    @@unique([userId, type])
    @@map("tokens")
}
