generator client {
    provider     = "prisma-client"
    output       = "../src/generated/prisma"
    moduleFormat = "cjs"
}

datasource db {
    provider = "postgresql"
}

enum ActionScope {
    OWN
    ANY
}

model User {
    id        String    @id @default(cuid())
    email     String
    password  String?
    googleSub String?   @unique
    githubId  String?   @unique
    slug      String
    isActive  Boolean   @default(true)
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    userProfile UserProfile?
    sessions    Session[]

    @@map("users")
}

model UserProfile {
    id        Int       @id
    userId    String    @unique
    firstName String
    lastName  String
    photoUrl  String?
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    user User @relation(fields: [userId], references: [id])

    @@map("user_profiles")
}

model Role {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime

    roleActions RoleAction[]
    userRoles   UserRole[]

    @@map("roles")
}

model Action {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime

    roleActions RoleAction[]
    userActions UserAction[]

    @@map("actions")
}

model RoleAction {
    roleId       Int
    actionId     Int
    defaultScope ActionScope @default(OWN)

    role   Role   @relation(fields: [roleId], references: [id])
    action Action @relation(fields: [actionId], references: [id])

    @@id([roleId, actionId])
    @@map("role_actions")
}

model UserRole {
    userId String
    roleId Int

    role Role @relation(fields: [roleId], references: [id])

    @@id([userId, roleId])
    @@map("user_roles")
}

model UserAction {
    userId   String
    actionId Int
    scope    ActionScope

    action Action @relation(fields: [actionId], references: [id])

    @@id([userId, actionId])
    @@map("user_actions")
}

model Session {
    id        String   @id @default(cuid())
    userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    user         User          @relation(fields: [userId], references: [id])
    refreshToken RefreshToken?

    @@map("sessions")
}

model RefreshToken {
    id        Int      @id @default(autoincrement())
    sessionId String   @unique
    value     String   @unique
    expiresAt DateTime
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    session Session @relation(fields: [sessionId], references: [id])

    @@map("refresh_tokens")
}
